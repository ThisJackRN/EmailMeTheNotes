<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn) { %>
        <%- include('header.ejs') %>
        <div class="container mt-5">
            <h1 class="mb-4">Upload Files</h1>
            <form action="/upload" method="post" enctype="multipart/form-data" class="mb-4">
                <div class="form-group">
                    <input type="file" name="file" accept=".pdf,.docx,.txt,.jpg,.png" class="form-control-file" required>
                </div>
                <div class="form-group">
                    <input type="text" name="name" placeholder="Enter file name" class="form-control">
                </div>
                <div class="form-group">
                    <textarea name="description" placeholder="Enter file description" class="form-control" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
        <script>
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('upload') && urlParams.get('upload') === 'success') {
                alert('Upload successful!');
            }
        </script>
    <% } else { %>
        <script>
            window.location.href = '/';
        </script>
    <% } %>
    <%- include('footer.ejs') %>
</body>
</html>